{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "mocha": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 9
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ]
  }
}
