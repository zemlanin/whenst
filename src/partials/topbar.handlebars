<header id="topbar" class="pure-u-1">
  <nav>
    <ol>
      {{#if profile }}
        <li class="no-chevron">
          <a
            href="{{ route "settingsSlack" user_id=user_id }}"
            class="current-account"
            {{#if profile.display_name}}
              title="{{profile.display_name}} ({{team.name}})"
            {{else}}
              title="{{profile.real_name}} ({{team.name}})"
            {{/if}}
          >
            <img
              src="{{profile.image_72}}"
              {{#if profile.display_name}}
                alt="{{profile.display_name}} ({{team.name}})"
              {{else}}
                alt="{{profile.real_name}} ({{team.name}})"
              {{/if}}
            >
            {{#unless team.icon.image_default}}
              <img
                src="{{team.icon.image_44}}"
                alt="{{team.name}}"
                class="team-icon"
              >
            {{/unless}}
          </a>
        </li>
      {{/if}}
      {{#> breadcrumbs . }}{{/ breadcrumbs }}
    </ol>
  </nav>
  <div class="current-status">
    {{#if current_status}}
      <a
        class="status"
        href="{{ route "slackPresetId" user_id=user_id
          ?status_emoji=current_status.status_emoji
          ?status_text=current_status.status_text }}"
        title="Current status"
      >
        {{>partials_status current_status}}
      </a>
      <a
        class="deeper"
        style="flex-grow: 0; padding-right: 0;"
        role="presentation"
        href="{{ route "slackPresetId" user_id=user_id
          ?status_emoji=current_status.status_emoji
          ?status_text=current_status.status_text }}"
      >❯</a>
    {{else}}
      <span></span>
    {{/if}}
  </div>
</header>
