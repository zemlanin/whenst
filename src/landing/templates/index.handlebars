<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>when.st</title>
  <link rel="stylesheet" type="text/css" href="{{ route "cdn" _="pure-min.css" }}">
  <link rel="stylesheet" type="text/css" href="{{ route "cdn" _="main.css" }}">
</head>
<body>
  <div id="layout" class="pure-g">
    <div class="pure-u-1">
      <p>{{session.id}}</p>

      <ul>
        {{#each slacks}}
          <li>{{this.team_name}} ({{this.team_id}})</li>
        {{/each}}
      </ul>

      <a href="https://slack.com/oauth/authorize?client_id={{client_id}}&scope=users.profile:write%20dnd:write%20emoji:read&redirect_uri={{ absolute "authSlack" }}&state={{state}}">
        login
      </a>
    </div>
  </div>
</body>
