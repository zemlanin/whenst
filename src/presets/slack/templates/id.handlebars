<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>when.st</title>
  <link rel="stylesheet" type="text/css" href="{{ asset "pure-min.css" }}">
  <link rel="stylesheet" type="text/css" href="{{ asset "main.css" }}">
  <link rel="shortcut icon" type="image/png" href="{{ asset "favicon.png" }}">
</head>
<body>
  <div id="layout" class="pure-g">
    <div class="pure-u-1">
      <a href="{{ route "slackPresetsList" user_id=user_id }}">&larr;</a>
      <img src="{{profile.image_48}}">
      {{#unless team.icon.image_default}}
        <img src="{{team.icon.image_34}}">
      {{/unless}}
      {{#if profile.display_name}}
        {{profile.display_name}}
      {{else}}
        {{profile.real_name}}
      {{/if}}
      ({{team.name}})

      {{#with current_status}}
        <span>
          [{{{status_emoji_html}}}] {{{status_text_html}}}
        </span>
      {{/with}}

      <hr>

      {{#with preset}}
        <div style="font-size: 2em; text-align: center;">
          [{{{status_emoji_html}}}] {{{status_text_html}}}

          <form
            style="display: inline-block"
            method="post"
            action="{{ route "slackPresetUse" user_id=../user_id }}"
          >
            <input type="hidden" name="_csrf" value="{{@csrfToken}}">
            <input type="hidden" name="id" value="{{id}}">
            <button type="submit">use</button>
          </form>
        </div>
      {{/with}}
    </div>
  </div>
</body>
