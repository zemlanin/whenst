{{>partials_head}}
<body>
  <div id="layout" class="pure-g">
    <div class="pure-u-1">
      <a href="{{ route "slackPresetsList" user_id=user_id }}">&larr;</a>
      <img src="{{profile.image_48}}">
      {{#unless team.icon.image_default}}
        <img src="{{team.icon.image_34}}">
      {{/unless}}
      {{#if profile.display_name}}
        {{profile.display_name}}
      {{else}}
        {{profile.real_name}}
      {{/if}}
      ({{team.name}})

      {{>partials_status current_status}}

      <hr>

      <div style="font-size: 2em; text-align: center;">
        {{>partials_status preset}}
      </div>

          <form
            style="display: inline-block"
            method="post"
            action="{{ route "slackPresetUse" user_id=../user_id }}"
          >
            <input type="hidden" name="_csrf" value="{{@csrfToken}}">
            <input type="hidden" name="status_emoji" value="{{status_emoji}}">
            <input type="hidden" name="status_text" value="{{status_text}}">
            <button type="submit">use</button>
          </form>
    </div>
  </div>
</body>
