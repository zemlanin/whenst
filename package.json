{
  "name": "whenst",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "targets": {
    "default": {
      "context": "browser",
      "source": [
        "index.html",
        "settings/index.html",
        "about/index.html",
        "link/index.html"
      ],
      "distDir": "./dist/client",
      "includeNodeModules": true
    },
    "server": {
      "context": "node",
      "outputFormat": "esmodule",
      "source": [
        "server/index.ts",
        "server/migrations.ts"
      ],
      "distDir": "./dist/server"
    }
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "parcel build --target default && parcel build --target server --config \"@parcel/config-default\"",
    "watch": "parcel watch --no-hmr",
    "start": "node dist/server",
    "migrate": "node dist/server/migrations",
    "lint": "npm run eslint && npm run prettier -- -l",
    "fmt": "tsc -p server && npm run eslint -- --fix && npm run prettier -- --write",
    "prettier": "prettier \"./*.{html,css,js,jsx,cjs}\" \"./server/**/*.ts\" \"./icons/**/*.jsx\"",
    "eslint": "eslint \"./*.{js,jsx,cjs}\" \"./server/**/*.ts\" \"./icons/**/*.jsx\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://zemlanin@github.com/zemlanin/whenst.git"
  },
  "author": "Anton Verinov <anton@verinov.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zemlanin/whenst/issues"
  },
  "homepage": "https://github.com/zemlanin/whenst#readme",
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/static": "^8.0.3",
    "better-sqlite3": "^11.7.0",
    "cookie": "^1.0.2",
    "fastify": "^5.2.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@js-temporal/polyfill": "^0.4.4",
    "@parcel/compressor-brotli": "^2.13.3",
    "@parcel/compressor-gzip": "^2.13.3",
    "@parcel/packager-raw-url": "^2.13.3",
    "@parcel/service-worker": "^2.13.3",
    "@parcel/transformer-inline-string": "^2.13.3",
    "@parcel/transformer-webmanifest": "^2.13.3",
    "@preact/signals": "^1.2.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.32.2",
    "parcel": "^2.13.3",
    "preact": "^10.17.1",
    "prettier": "^3.0.2",
    "sortablejs": "^1.15.0",
    "svgo": "^3.3.2",
    "typescript": "^5.7.2",
    "urlpattern-polyfill": "^9.0.0"
  }
}
