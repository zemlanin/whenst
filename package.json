{
  "name": "whenst",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "targets": {
    "default": {
      "context": "browser",
      "source": [
        "register-sw.ts",
        "src/pages/home/index.html",
        "src/pages/settings/index.html",
        "src/pages/about/index.html",
        "src/pages/link/index.html"
      ],
      "distDir": "./dist/client",
      "includeNodeModules": true
    },
    "server": {
      "context": "node",
      "outputFormat": "esmodule",
      "source": [
        "server/index.ts",
        "server/release.ts",
        "server/migrations.ts"
      ],
      "distDir": "./dist/server"
    }
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime",
    "preact/jsx-dev-runtime": "preact/jsx-runtime",
    "fuse.js/basic": "fuse.js/dist/fuse.basic"
  },
  "imports": {
    "#dist/*": "./dist/*"
  },
  "scripts": {
    "test": "tap --disable-coverage",
    "build": "npm run build:client && npm run build:server",
    "build:client": "parcel build --target default",
    "build:server": "parcel build --target server --config \"@parcel/config-default\"",
    "watch": "parcel watch --no-hmr --target default",
    "start": "node dist/server",
    "migrate": "node dist/server/migrations",
    "release": "node dist/server/release",
    "lint": "eslint && prettier . --check",
    "fmt": "tsc && tsc -p src/service-worker && tsc -p server && eslint --fix && prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://zemlanin@github.com/zemlanin/whenst.git"
  },
  "author": "Anton Verinov <anton@verinov.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zemlanin/whenst/issues"
  },
  "homepage": "https://github.com/zemlanin/whenst#readme",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.722.0",
    "@aws-sdk/lib-storage": "^3.722.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/static": "^8.0.3",
    "better-sqlite3": "^11.7.0",
    "cookie": "^1.0.2",
    "fastify": "^5.2.0",
    "idb": "^8.0.3",
    "mime": "^4.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@js-temporal/polyfill": "^0.4.4",
    "@parcel/compressor-brotli": "^2.13.3",
    "@parcel/compressor-gzip": "^2.13.3",
    "@parcel/config-default": "^2.13.3",
    "@parcel/packager-raw-url": "^2.13.3",
    "@parcel/packager-ts": "^2.13.3",
    "@parcel/service-worker": "^2.13.3",
    "@parcel/transformer-inline-string": "^2.13.3",
    "@parcel/transformer-webmanifest": "^2.13.3",
    "@preact/signals": "^2.3.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/sortablejs": "^1.15.8",
    "@typescript-eslint/parser": "^8.46.0",
    "cheerio": "^1.1.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "fuse.js": "^7.1.0",
    "parcel": "^2.13.3",
    "preact": "^10.26.4",
    "prettier": "^3.0.2",
    "sortablejs": "^1.15.0",
    "svgo": "^3.3.2",
    "tap": "^21.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.0",
    "urlpattern-polyfill": "^10.0.0"
  }
}
