{
  "name": "whenst",
  "version": "1.0.0",
  "description": "",
  "targets": {
    "default": {
      "context": "browser",
      "source": "index.html",
      "distDir": "./dist",
      "includeNodeModules": true
    },
    "functions": {
      "context": "node",
      "source": [
        "functions/api/settings.js",
        "functions/api/timezones.js"
      ],
      "distDir": "./dist/functions/api/",
      "outputFormat": "esmodule",
      "includeNodeModules": true,
      "isLibrary": true
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "parcel build",
    "start": "wrangler pages dev dist --kv KV --persist",
    "lint": "npm run eslint && npm run prettier -- -l",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "prettier": "prettier \"./*.{html,js,css}\" \"./functions/**/*.js\"",
    "eslint": "eslint \"./*.js\" \"./functions/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://zemlanin@github.com/zemlanin/whenst.git"
  },
  "author": "Anton Verinov <anton@verinov.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zemlanin/whenst/issues"
  },
  "homepage": "https://github.com/zemlanin/whenst#readme",
  "devDependencies": {
    "@cfworker/json-schema": "^1.12.5",
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@js-temporal/polyfill": "^0.4.3",
    "cookie": "^0.5.0",
    "eslint": "^8.31.0",
    "parcel": "^2.8.2",
    "posthtml-inline-svg": "^0.2.0",
    "prettier": "^2.8.1",
    "urlpattern-polyfill": "^6.0.2",
    "wrangler": "^2.6.2"
  }
}
